web: python manage.py collectstatic --noinput && gunicorn beautyofportugal.wsgi --bind 0.0.0.0:$PORT --workers 1
release: python manage.py migrate && \
  python manage.py shell -c "import os; from django.contrib.auth import get_user_model; U=get_user_model(); U.objects.filter(username='admin').exists() or U.objects.create_superuser('admin','admin@example.com', os.getenv('DJANGO_SUPERUSER_PASSWORD'))"
